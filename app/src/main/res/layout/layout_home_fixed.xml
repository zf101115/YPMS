<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_fix_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初升骄阳"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_empty"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ypms.customWidget.RoundRectImageView
            android:id="@+id/iv_top_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="98dp"/>
        <com.ypms.customWidget.RoundRectImageView
            android:id="@+id/iv_top_right"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.ypms.customWidget.RoundRectImageView
            android:id="@+id/iv_bottom_left"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="1"/>
        <com.ypms.customWidget.RoundRectImageView
            android:id="@+id/iv_bottom_cent"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <com.ypms.customWidget.RoundRectImageView
            android:id="@+id/iv_bottom_right"
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>