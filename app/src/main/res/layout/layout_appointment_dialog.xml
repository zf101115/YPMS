<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingTop="15dp"
        android:paddingRight="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_red_radius"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="免费"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginLeft="7dp"
                android:text="显示免费领取价值300元口语体验课！"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/title_dark" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/shape_round_red"
            android:drawablePadding="5dp"
            android:text="免费想象力测试"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/shape_round_red"
            android:drawablePadding="5dp"
            android:text="免费定制丰富方案" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/shape_round_red"
            android:drawablePadding="5dp"
            android:text="经验即碍事一对一指导" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/title_dark"
            android:text="使用时间：2018.2.10-2019.2.19" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/title_dark"
            android:text="适用商户：韦博国际英语（文二路中心店）" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_et_stroke"
            android:hint="请输入预定者姓名"
            android:paddingLeft="10dp"
            android:maxLength="10"
            android:textColorHint="@color/color_grey_99"
            android:textColor="@color/title_dark"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_et_stroke"
            android:hint="请输入手机"
            android:paddingLeft="10dp"
            android:textColorHint="@color/color_grey_99"
            android:textColor="@color/title_dark"
            android:textSize="12sp" />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="17dp"
             android:drawablePadding="5dp"
             android:text="提交信息30分钟内会有专人电话确认"
             android:drawableLeft="@drawable/ic_security"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/btn_commit"
        android:text="立即预约"
        android:gravity="center"
        android:textColor="@color/white"/>
</LinearLayout>