<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    app:contentInsetStart="0dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/img_back"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pb_back"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/ll_tab_ins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tab_ins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="机构"/>
            <View
                android:id="@+id/view_tab_ins"
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tab_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="课程"/>
            <View
                android:id="@+id/view_tab_class"
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="22dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tab_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="点评"/>
            <View
                android:id="@+id/view_tab_review"
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ag_share"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ag_fav"
        android:layout_gravity="end"/>
</android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>

