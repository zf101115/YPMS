<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_write_ripple"
    android:paddingTop="15dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical">
        <com.ypms.customWidget.CircleImageView
            android:id="@+id/iv_pic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="美吉姆早教（古墩路早教点）"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grey_99"
            android:layout_marginRight="15dp"
            android:text="2018-01-01"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        style="@style/div_vertical_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_dark"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:text="限时免费领取价值1000元口语体验课！"/>
        <TextView
            android:id="@+id/tv_mark"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:text="2~5岁儿童 . 无基础 . 1～4人小班 . 外籍教师"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_below="@+id/tv_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:text="编号：201802909883843"/>
        <TextView
            android:id="@+id/tv_action"
            android:layout_below="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_white_radius"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="12dp"
            android:text="取消活动"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/enrolla_image_cancel"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorGrey_E6"/>
</LinearLayout>