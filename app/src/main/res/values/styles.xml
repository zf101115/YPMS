<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_grey_99</item>
        <item name="colorPrimaryDark">@color/color_grey_99</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <!--水平分割线-->
    <style name="div_vertical_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorGrey_E5</item>
    </style>
    
    <style name="text_white_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_search_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--竖直分割线-->
    <style name="div_horizontal_line">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/colorGrey_E6</item>
    </style>

    <style name="popup_anim_style">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top</item>
    </style>

    <!--从底部向上-->
    <style name="dialog_anim_bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter_bottom</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit_bottom</item>
    </style>
</resources>
